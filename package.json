{
  "name": "root",
  "version": "0.13.5",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "publish": "lerna publish",
    "sc": "yarn start:core",
    "sd": "yarn start:datasheet dev",
    "sd:private": "REACT_APP_DEPLOYMENT_MODELS=PRIVATE yarn dev:datasheet",
    "sd:r": "yarn workspace @vikadata/datasheet dev:remote-backend",
    "sr": "yarn start:room-server",
    "sss": "yarn workspace @vikadata/components dev",
    "sync:colors": "python3 ./scripts/design_token/sync_colors.py",
    "sync:icons": "python3 ./scripts/design_token/make_icon.py && yarn workspace @vikadata/icons format",
    "start:core": "yarn workspace @vikadata/core start",
    "start:i18n": "yarn workspace @vikadata/i18n-lang start",
    "start:datasheet": "yarn workspace @vikadata/datasheet dev",
    "start:widget-sdk": "yarn workspace @vikadata/widget-sdk start",
    "start:room-server": "yarn workspace @vikadata/room-server start:dev",
    "start:components": "yarn workspace @vikadata/components start",
    "build:core": "yarn workspace @vikadata/core build",
    "build:i18n": "yarn workspace @vikadata/i18n-lang build",
    "build:datasheet": "yarn workspace @vikadata/datasheet build",
    "build:widget-sdk": "yarn workspace @vikadata/widget-sdk build",
    "build:room-server": "yarn workspace @vikadata/room-server build",
    "build:icons": "yarn workspace @vikadata/icons build",
    "build:components": "yarn workspace @vikadata/components build",
    "build:components:sg": "yarn workspace @vikadata/components build:sg",
    "build:dst:pre": "yarn workspaces foreach --include '?(@vikadata/i18n-lang|@vikadata/core|@vikadata/icons|@vikadata/components|@vikadata/widget-sdk)' -pt -j 8 run build",
    "build:dst": "yarn workspaces foreach --include '?(@vikadata/i18n-lang|@vikadata/core|@vikadata/icons|@vikadata/components|@vikadata/widget-sdk|@vikadata/datasheet)' -pt -j 8 run build",
    "build:dst:private": "REACT_APP_DEPLOYMENT_MODELS=PRIVATE PUBLIC_URL=/build yarn build:dst && rm packages/datasheet/build/static/**/*.map",
    "start:prod:room-server": "yarn workspace @vikadata/room-server start:prod",
    "scripts:makeconfig": "yarn scripts:makeconfig-json && yarn scripts:makeconfig-tscode && yarn build:i18n",
    "scripts:makeconfig:private": "REACT_APP_DEPLOYMENT_MODELS=PRIVATE yarn scripts:makeconfig",
    "pm2:nest": "pm2-runtime start packages/room-server/ecosystem.config.js",
    "scripts:makeconfig-json": "ts-node ./scripts/system_config/generator.ts && ts-node packages/i18n-lang/src/generateLang.ts",
    "scripts:makeconfig-tscode": "quicktype ./packages/i18n-lang/src/config/strings.auto.json -o ./packages/core/src/i18n/strings.interface.ts --just-types && quicktype ./packages/core/src/config/system_config.auto.json -o ./packages/core/src/config/system_config.interface.ts --just-types && quicktype ./packages/core/src/config/api_tip_config.auto.json -o ./packages/core/src/config/api_tip_config.interface.ts --just-types --no-maps && node ./scripts/system_config/fix_strings_interface.js",
    "scripts:makeconfig-javacode": "quicktype ./packages/core/src/config/system_config.auto.json -o $VIKA_SERVER_PATH/vikadata-system-config/src/main/java/com/vikadata/systemconfig/systemconfig/SystemConfig.java --package com.vikadata.systemconfig.systemconfig && quicktype ./packages/i18n-lang/src/config/strings.auto.json -o $VIKA_SERVER_PATH/vikadata-system-config/src/main/java/com/vikadata/systemconfig/strings/Strings.java --package com.vikadata.systemconfig.strings && cp ./packages/i18n-lang/src/config/strings.auto.json $VIKA_SERVER_PATH/vikadata-system-config/src/main/resources/ && cp ./packages/core/src/config/system_config.auto.json $VIKA_SERVER_PATH/vikadata-system-config/src/main/resources/",
    "update:design": "sh ./scripts/upload_design.sh",
    "script:colors": "ts-node ./scripts/generate_color.ts",
    "test:core": "yarn workspace @vikadata/core test",
    "test:widget-sdk": "yarn workspace @vikadata/widget-sdk test",
    "test:datasheet": "yarn workspace @vikadata/datasheet test",
    "test:nest": "yarn workspace @vikadata/room-server test",
    "test:ut:room": "yarn workspace @vikadata/room-server test:ut",
    "clear:cache": "rm -rf ./package/datasheet/node_modules/.cache/hard-source",
    "link:widget": "yarn workspace @vikadata/core link && yarn workspace @vikadata/widget-sdk link && yarn workspace @vikadata/components link && yarn workspace @vikadata/icons",
    "postinstall": "cd .. && husky install apitable/.husky",
    "stylelint:datasheet": "yarn workspace @vikadata/datasheet stylelint",
    "lint": "eslint --fix --ext packages/*/src/**/!(*system_config.interface|strings.interface).{js,ts,tsx}",
    "cy:open": "yarn workspace @vikadata/cypress cy:open",
    "cy:run": "yarn workspace @vikadata/cypress cy:run",
    "scripts:sync_design_token": "python3 ./scripts/design_token/sync_design_token.py",
    "scripts:sync_icon": "python3 ./scripts/design_token/make_icon.py && yarn workspace @vikadata/icons format",
    "scripts:sync_color": "python3 ./scripts/design_token/sync_colors.py",
    "scripts:make_changelog": "python3 ./scripts/changelog/make_changelog.py",
    "check": "eslint --print-config packages/*/src/**/!(*system_config.interface|strings.interface).{js,ts,tsx}"
  },
  "lint-staged": {
    "packages/datasheet/src/**/*.{css,less,scss}": "yarn stylelint:datasheet",
    "packages/*/(src|pages)/**/!(*system_config.interface|strings.interface).{ts,tsx}": "eslint --fix --no-cache"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "engines": {
    "node": "16.15.0"
  },
  "devDependencies": {
    "@babel/core": "7.11.6",
    "@commitlint/cli": "8.1.0",
    "@commitlint/config-conventional": "8.1.0",
    "@types/dot-object": "^2.1.2",
    "@types/lru-cache": "^5.1.0",
    "@types/node": "12.7.3",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "@vikadata/vika": "latest",
    "babel-eslint": "10.1.0",
    "chalk": "^4.0.0",
    "concurrently": "^7.2.2",
    "dot-object": "^2.1.2",
    "dotenv": "6.2.0",
    "dotenv-expand": "4.2.0",
    "eslint": "^7.21.0",
    "eslint-config-react-app": "5.2.1",
    "eslint-loader": "4.0.2",
    "eslint-plugin-flowtype": "5.2.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-vika": "0.0.1",
    "husky": "8.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "13.0.3",
    "lodash": "^4.17.20",
    "quicktype": "^15.0.212",
    "svgo": "^2.3.0",
    "ts-node": "^8.6.2",
    "ts-pnp": "1.1.2",
    "typescript": "4.6.4"
  },
  "resolutions": {
    "webpack": "4.44.2"
  },
  "bin": "packages/room-server/dist/main.js",
  "pkg": {
    "scripts": [
      "packages/room-server/dist/**/*.js"
    ],
    "assets": [
      "node_modules/bull/lib/commands/**/*",
      "node_modules/@nestjs",
      "node_modules/lodash",
      "packages/room-server/**/*.proto",
      "packages/room-server/**/*.lua",
      "packages/room-server/**/*.yaml"
    ]
  },
  "packageManager": "yarn@3.2.1"
}
