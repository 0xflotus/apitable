<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vikadata.scheduler.space.mapper.organization.TeamMapper">

    <select id="selectTeamIdsBySpaceIds" resultType="java.lang.Long">
        SELECT id
        FROM vika_unit_team
        WHERE is_deleted = 0
        AND space_id IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <update id="updateIsDeletedByTeamIds">
        UPDATE vika_unit_team
        SET is_deleted = 1
        WHERE is_deleted = 0
        AND id IN
        <foreach item="item" index="index" collection="list" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>
</mapper>
