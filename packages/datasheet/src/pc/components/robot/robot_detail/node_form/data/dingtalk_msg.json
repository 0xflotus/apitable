{
  "schema": {
    "type": "object",
    "required": [
      "type",
      "content",
      "webhookUrl"
    ],
    "properties": {
      "type": {
        "enum": [
          "text",
          "markdown"
        ],
        "type": "string",
        "title": "消息类型",
        "default": "text",
        "enumNames": [
          "文本消息",
          "Markdown"
        ],
        "description": "目前支持发送 text 和 markdown 类型的消息"
      },
      "content": {
        "type": "string",
        "title": "消息内容",
        "description": "输入要发送到钉钉群聊的消息内容（输入英文斜杠「/」可插入变量）"
      },
      "webhookUrl": {
        "type": "string",
        "title": "钉钉机器人 webhook 地址",
        "description": "指定一个钉钉机器人，向它所在的群聊发送消息 [如何获取 webhook](https://vika.cn/help/manual-vika-robot/#9-toc-title)"
      }
    },
    "dependencies": {
      "type": {
        "oneOf": [
          {
            "required": [
              "title"
            ],
            "properties": {
              "type": {
                "enum": [
                  "markdown"
                ]
              },
              "title": {
                "type": "string",
                "title": "消息标题",
                "description": "输入要发送的消息标题，该标题会显示在钉钉左侧消息列表中的摘要中"
              }
            }
          }
        ]
      }
    },
    "additionalProperties": false
  },
  "uiSchema": {
    "ui:order": [
      "webhookUrl",
      "type",
      "title",
      "content"
    ]
  }
}