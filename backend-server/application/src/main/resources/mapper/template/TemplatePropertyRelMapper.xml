<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.vikadata.api.template.mapper.TemplatePropertyRelMapper">
    <delete id="deleteBatch">
        DELETE
        from ${tablePrefix}template_property_rel;
    </delete>

    <insert id="insertBatch">
        INSERT INTO ${tablePrefix}template_property_rel(id, template_id, property_id, property_code,
        property_order)
        VALUES
        <foreach item="item" index="index" collection="entities" separator=",">
            <trim prefix="(" suffix=")">
                #{item.id},#{item.templateId},#{item.propertyId}, #{item.propertyCode},
               #{item.propertyOrder}
            </trim>
        </foreach>
    </insert>

    <select id="selectTemplateIdsByPropertyId" resultType="java.lang.String">
        SELECT template_id
        from ${tablePrefix}template_property_rel
        where property_id = #{propertyId}
    </select>

    <delete id="deleteBatchIn">
        DELETE
        from ${tablePrefix}template_property_rel where property_id in
        <foreach item="item" index="index" collection="propertyIds" open="(" separator=","
                 close=")">
            #{item}
        </foreach>
    </delete>

    <select id="selectTemplateIdsByPropertyIds" resultType="com.vikadata.api.template.model.TemplatePropertyRelDto">
        SELECT property_code, template_id
        from ${tablePrefix}template_property_rel where property_code in
        <foreach item="item" index="index" collection="propertyCodes" open="(" separator=","
                 close=")">
            #{item}
        </foreach>
    </select>
</mapper>
