        <comment>组件表增加节点ID索引</comment>
        <sql>
            ALTER TABLE `${table.prefix}widget` ADD INDEX `k_node_id`(`node_id`) USING BTREE;
        </sql>
    </changeSet>
</databaseChangeLog>
