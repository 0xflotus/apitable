<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.vikadata.api.modular.automation.mapper.AutomationServiceMapper">
    <select id="selectIdByServiceId" resultType="java.lang.Long">
        SELECT id
        FROM vika_automation_service
        WHERE service_id = #{serviceId}
          AND is_deleted = 0 LIMIT 1
    </select>

    <select id="selectIdBySlugIncludeDeleted" resultType="java.lang.Long">
        SELECT id
        FROM vika_automation_service
        WHERE slug = #{slug} LIMIT 1
    </select>
</mapper>
